<!DOCTYPE html>
<html>
  <head>
    <title>Home Baked Recipes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <h1 class='home-logo'></h1>
    <h1>Home Baked Recipes</h1>
    <nav>
      <div class="header-data">
        <% if !current_user %>
          <h5><%= link_to "Sign up", new_user_registration_path %></h5>
          <h5><%= link_to "Log in", new_user_session_path %></h5>
        <% else %>
          <h5><%= current_user.email %></h5>
          <h5><%= link_to "Log out", destroy_user_session_path, :method => :delete %></h5>
        <% end %>
        <!-- <a href="/recipes">Recipes</a> -->
      </div>
      <h2><%= link_to "User profile", show_session_path %> | <%= link_to "Recipes", recipes_path %></h2>
    </nav>


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
