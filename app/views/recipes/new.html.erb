<h2>Create a new recipe page</h2>

<%= form_for [@recipe] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Brownies" %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.label :description %>
  <%= f.text_field :description, placeholder: "Moist, delicious, chewy brownies" %>

  <%= f.label :directions %>
  <%= f.text_field :directions, placeholder: "" %>

  <%= f.label :bake_time %>
  <%= f.text_field :bake_time, placeholder: "30-35 minutes" %>

  <%= f.label :baking_method %>
  <%= f.text_field :baking_method, placeholder: "9x9 square pan at 350" %>

  <%= f.label :serving_size %>
  <%= f.text_field :serving_size, placeholder: "3-4, preferably more than one" %>


  <%= f.submit %>
  <% @recipe.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>
